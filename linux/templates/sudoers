#
# This file MUST be edited with the 'visudo' command as root.
#
# Please consider adding local content in /etc/sudoers.d/ instead of
# directly modifying this file.
#
# See the man page for details on how to write a sudoers file.
#
Defaults        env_reset
Defaults        mail_badpass
Defaults        secure_path="/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/home/configs/scripts/"

# Host alias specification

# User alias specification

# Cmnd alias specification

# User privilege specification
root    ALL=(ALL:ALL) ALL

#Seta o Sudo para o SSH em todos os usuários
ALL ALL=NOPASSWD: /usr/bin/ssh ssh

# Members of the admin group may gain root privileges
%admin ALL=(ALL) ALL

# Allow members of group sudo to execute any command
%sudo   ALL=(ALL:ALL) ALL

# See sudoers(5) for more information on "#include" directives:

#includedir /etc/sudoers.d

#GRUPO PADRÃO DO SISTEMA
%usuarios ALL=NOPASSWD: /bin/ls, /usr/bin/who

#GRUPO DE USUARIOS DEV
%dev ALL=NOPASSWD:  /bin/ls, /usr/bin/who, /home/configs/scripts/estagiodeploy, /home/configs/scripts/appsdeploy

#GRUPO DE USUARIOS DEV-ADMIN
%dev-admin ALL=NOPASSWD:  /bin/ls, /usr/bin/who, /home/configs/scripts/estagiodeploy, /home/configs/scripts/masterdeploy,  /home/configs/scripts/appsdeploy,  /home/configs/scripts/isql,  /home/configs/scripts/suporte,  /home/configs/scripts/appsdeploy,  /home/configs/scripts/uploadmysql,  /home/configs/scripts/conectarappsmaster, /home/configs/scripts/conectarappsestagio

#GRUPO DE USUARIOS SUPORTE
%suporte-admin ALL=NOPASSWD:  /bin/ls, /usr/bin/who, /home/configs/scripts/deployestagio

#GRUPO DE USUARIOS INFRA
%infra ALL=NOPASSWD: /usr/bin/ssh, /home/configs/scripts/execute*

#GRUPO DE USUARIOS SUBADQUIRENTE 
%subad-admin ALL=NOPASSWD: /home/configs/scripts/conectarsubadsmaster, /home/configs/scripts/deploysubad

#GRUPO DE ACESSO INFRA SLJUMPSERVER
%infra ALL=(ALL) NOPASSWD:ALL